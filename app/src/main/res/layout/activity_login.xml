<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#FF5EA447"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.sahajarora.fate.LoginActivity">



    <ImageView android:layout_width="300dp" android:layout_height="150dp"
        android:src="@drawable/logo" android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"/>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittextshape"
        android:weightSum="100">


        <EditText
            android:hint="E-mail"
            android:paddingLeft="10sp"
            android:textColor="#FF5EA447"
            android:layout_width="fill_parent"
            android:layout_height="55sp"
            android:id="@+id/etUsername"
            android:maxLines="1"
            android:maxLength="35"
            android:nestedScrollingEnabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:minLines="1"
            android:outlineProvider="bounds"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:enabled="true"
            android:background="@drawable/edittextshape"
            />



        <EditText
            android:paddingLeft="10sp"
            android:hint="Password"
            android:layout_width="fill_parent"
            android:layout_height="55sp"
            android:id="@+id/etPassword"
            android:maxLines="1"
            android:maxLength="35"
            android:nestedScrollingEnabled="true"
            android:autoText="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:minLines="1"
            android:inputType="textPassword"
            android:outlineProvider="bounds"
            android:singleLine="true"
            android:enabled="true"
            android:textColor="#FF5EA447"
            android:background="@drawable/edittextshape"/>

    </LinearLayout>

    <Button
        android:background="@drawable/buttonshape"
        android:layout_width="fill_parent"
        android:layout_height="45sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:text="SIGN IN"
        android:textColor="#ffffff"
        android:id="@+id/btnSignIn"


        />

    <Button
        android:layout_width="fill_parent"
        android:background="#FF5EA447"
        android:layout_marginTop="75sp"
        android:layout_height="45sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:text="Sign Up For UrDriver"
        android:id="@+id/btnRegister"
        />



</LinearLayout>
